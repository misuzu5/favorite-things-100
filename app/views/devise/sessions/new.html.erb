<div class="main bg-light">
  <div class="inner">
    <div class="form__wrapper">
      <div class="h-100 p-5 text-black bg-white ">

        <i class="bi bi-box-arrow-in-right" alt="" width="72" height="57"></i>
        <h1 class="h3 mb-3 fw-normal border-bottom">Please log in</h1>

        <%= form_with model: @user, url: user_session_path, local: true do |f| %>

          <div class='login-flash-message'>
            <%= flash[:notice] %>
            <%= flash[:alert] %>
          </div>

          <div class="field">
            <%= f.label :email, "メールアドレス" %>
            <span class="indispensable">必須</span><br/>
            <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email", placeholder: "name@example.com" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード（6文字以上半角英数字）" %>
            <span class="indispensable">必須</span><br/>
            <%= f.password_field :password, id:"user_password", autocomplete: "current-password", placeholder: "Password" %>
          </div>

          <%# <div class="checkbox mb-3">
            <label>
              <input type="checkbox" value="remember-me"> Remember me
            </label>
          </div> %>

          <div class="actions">
            <%= f.submit "ログイン", class: :form__btn %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>