<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <%= render 'devise/shared/error_messages', model: f.object %>

        <div class="field">
          <%= f.label :nickname, "ニックネーム" %>
          <span class="indispensable">必須</span><br/>
          <%= f.text_field :nickname, id:"user_name", autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %>
          <span class="indispensable">必須</span><br/>
          <%= f.email_field :email, id:"user_email", autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上半角英数字）" %>
          <span class="indispensable">必須</span><br/>
          <%= f.password_field :password, id:"user_password", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %>
          <span class="indispensable">必須</span><br/>
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :profile, "プロフィール" %>
          <span class="indispensable">必須</span><br/>
          <%= f.text_area :profile, class: :form__text, id:"user_profile" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>