<div class="main bg-light">
  <div class="inner">
    <div class="form__wrapper">
      <div class="h-100 p-5 text-black bg-white ">

        <i class="bi bi-door-open-fill" alt="" width="72" height="57"></i>
        <h1 class="h3 mb-3 fw-normal border-bottom">Please sign up</h1>

        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

          <%= render 'devise/shared/error_messages', model: f.object %>

          <div class="field">
            <%= f.label :nickname, "ニックネーム" %>
            <span class="indispensable">必須</span><br/>
            <%= f.text_field :nickname, id:"user_name", autofocus: true, placeholder: "nickname" %>
          </div>

          <div class="field">
            <%= f.label :email, "メールアドレス" %>
            <span class="indispensable">必須</span><br/>
            <%= f.email_field :email, id:"user_email", autocomplete: "email", placeholder: "name@example.com" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード（6文字以上半角英数字）" %>
            <span class="indispensable">必須</span><br/>
            <%= f.password_field :password, id:"user_password", autocomplete: "new-password", placeholder: "Password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "パスワード再入力" %>
            <span class="indispensable">必須</span><br/>
            <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password", placeholder: "Password" %>
          </div>

          <div class="field">
            <%= f.label :profile, "プロフィール" %>
            <span class="indispensable">必須</span><br/>
            <%= f.text_area :profile, class: :form__text, id:"user_profile", placeholder: "Profile" %>
          </div>

            <div class="field">
              <%= f.label :image, "プロフィール画像" %>
             <span class="dispensable">任意</span><br/>
              <%= f.file_field :image %>
            </div>

            <div id="sign-up-image"></div>

          <div class="actions">
            <%= f.submit "新規登録", class: :form__btn  %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
