<h2>ユーザー情報編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :nickname, "ニックネーム" %>
      <span class="indispensable">必須</span><br/>
      <%= f.text_field :nickname, id:"user_name", autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス" %>
      <span class="indispensable">必須</span><br/>
      <%= f.email_field :email, id:"user_email", autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, "新しいパスワード" %> <i>(※変更したくない場合は空白のままにしてください)</i> <br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> 文字以上半角英数字 </em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "新しいパスワード再入力" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :profile, "プロフィール" %>
      <span class="indispensable">必須</span><br/>
      <%= f.text_area :profile, class: :form__text, id:"user_profile" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(ユーザー情報を変更するには、現在のパスワードが必要です)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "更新する" %>
    </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
