<main class="main">
  <div class="inner">
    <% if user_signed_in? %>
      <div class="greeting">
        こんにちは！
        <%= link_to "#{current_user.nickname}さん", user_path(current_user), class: :greeting__link%>
      </div>
    <% end %>

    <div class='favorite-thing-contents'>
      <h2 class='title'>ピックアップカテゴリー</h2>
      <div class="subtitle" >
        みんなの好きなもの
      </div>
      <div class='favorite-thing-lists'>
        <div class="card__wrapper">
          <%= render partial: 'favorite_thing', collection: @favorite_things %>
        </div>
      </div>
    </div>
  </div>
  <%= link_to(new_favorite_thing_path, class: 'post-btn') do %>
    <span class='post-btn-text'>投稿する</span>
    <%= image_tag '指ハート.png' , size: '185x50' ,class: "post-btn-icon" %>
  <% end %>
</main>


