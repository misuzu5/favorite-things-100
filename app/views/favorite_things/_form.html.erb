<%= form_with model: @favorite_thing, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "好きなもののタイトル" %>
      <span class="indispensable">必須</span><br/>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :reason, "好きな理由" %>
      <span class="indispensable">必須</span><br/>
    <%= f.text_area :reason, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :emotion, "思い入れ" %>
      <span class="dispensable">任意</span><br/>
    <%= f.text_area :emotion, class: :form__text %>
  </div>

    <div class="field">
    <%= f.label :appeal_point, "アピールポイント" %>
      <span class="dispensable">任意</span><br/>
    <%= f.text_area :appeal_point, class: :form__text %>
  </div>

    <div class="field">
    <%= f.label :episode, "エピソード" %>
      <span class="indispensable">必須</span><br/>
    <%= f.text_area :episode, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :image, "イメージ画像" %>
      <span class="indispensable">必須</span><br/>
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>