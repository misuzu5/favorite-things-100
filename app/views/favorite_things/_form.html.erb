<%= form_with model: @favorite_thing, local: true do |f|%>
  <%= render 'shared/error_messages', model: f.object %>
  <div class="field">
    <%= f.label :title, "好きなことのタイトル" %>
      <span class="indispensable">必須</span><br/>
    <%= f.text_area :title, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :title, "好きなことのタイプ" %>
      <span class="indispensable">必須</span><br/>
    <%= f.collection_select(:type_id, Type.all, :id, :name, {}, {class:"type-select"}) %>
  </div>

  <div class="field">
    <%= f.label :reason1, "好きな理由1" %>
      <span class="indispensable">必須</span><br/>
    <%= f.text_area :reason1, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :reason2, "好きな理由2" %>
      <span class="indispensable">必須</span><br/>
    <%= f.text_area :reason2, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :reason3, "好きな理由3" %>
      <span class="indispensable">必須</span><br/>
    <%= f.text_area :reason3, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :episode, "エピソード" %>
      <span class="dispensable">任意</span><br/>
    <%= f.text_area :episode, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :image, "イメージ画像" %>
      <span class="indispensable">必須</span><br/>
    <%= f.file_field :image %>
  </div>

  <div id="new-image"></div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %><br>
    <%= link_to "もどる", :back, class:"back-btn" %>  
  </div>
<% end %>